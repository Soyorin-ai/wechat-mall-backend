# Application
APP_NAME=wechat-miniprogram-mall
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=wechat_mall
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/wechat_mall

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# WeChat Mini Program
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# WeChat Pay
WECHAT_PAY_MCH_ID=your_merchant_id
WECHAT_PAY_API_KEY=your_api_key
WECHAT_PAY_CERT_PATH=./certs/apiclient_cert.p12
WECHAT_PAY_NOTIFY_URL=https://yourdomain.com/api/payment/notify

# OSS (Aliyun OSS or Tencent COS)
OSS_REGION=oss-cn-hangzhou
OSS_BUCKET=your_bucket_name
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_ENDPOINT=https://your-bucket.oss-cn-hangzhou.aliyuncs.com

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# SMS (Optional)
SMS_ACCESS_KEY_ID=
SMS_ACCESS_KEY_SECRET=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Email (Optional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
